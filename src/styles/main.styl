@import "../../node_modules/normalize.css/normalize.css"

@font-face
   font-family NexaBold
   font-style bold
   src url(/assets/NexaBold.otf)
   
.content
	position: absolute
	top 0
	right 0
	left 0
	bottom 0
	display: flex
	flex-direction: column
	align-items: center
	justify-content: center
	background: linear-gradient(to right, #c81777 0%, #008fc9 100%)
	background-size: 140% 140%;
	animation: animation-bg 10s ease infinite;

.logo
	width: 30vw
	height: auto
	animation: animation-logo 900ms ease;
	img
		width: 100%
		
.slogan
	display flex
	animation animation-slogan 1s ease
	&__plane
		padding: 10px
		height: 1.5em
	&__label
		padding 10px
		a
			text-decoration: none
			color white
			font-size: 1.5em
			font-family NexaBold, Sans Serif

@keyframes animation-logo { 
    0%{
    	opacity: 0
    	transform: scale(1.3,1.3) 
    }
    100%{
    	opacity: 1.0
    	transform: scale(1,1) 
    }
}

@keyframes animation-slogan { 
    0%{
    	opacity: 0
    }
    100%{
    	opacity: 1.0
    }
}

@keyframes animation-bg { 
    0%{background-position:0% 50%}
    50%{background-position:100% 50%}
    100%{background-position:0% 50%}
}

@media (max-width: 1024px)
	.logo
		width: 50vw
		